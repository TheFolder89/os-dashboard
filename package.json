{
  "name": "os-dashboard",
  "private": true,
  "version": "0.0.0",
  "main": "desktop/main.js",
  "scripts": {
    "dev": "vite --port 3333 --strictPort",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "wait-on tcp:3333 && electron desktop/main.js",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.osdashboard.app",
    "productName": "OS Dashboard",
    "files": [
      "dist/**/*",
      "desktop/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.1",
    "electron": "^32.3.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "vite": "^5.4.1",
    "wait-on": "^9.0.3"
  }
}